#include <iostream>
#include<bits/stdc++.h>
#define MOD 1000000007
#define int long long
#define INF 1000000000000
using namespace std;

signed main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int N,K;
	    cin>>N>>K;
	    int sum=0;
	    for(int i=0;i<N;i++){
	        int X;
	        cin>>X;
	        if(X>K){
	        sum=(sum+(X-K))%MOD;}
	    }
	    cout<<sum<<endl;
	}
	return 0;
}
